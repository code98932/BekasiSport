<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="209dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Most Popular"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mostpopular1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:src="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mostpopular2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:src="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="@+id/mostpopular1"
        app:layout_constraintStart_toEndOf="@+id/mostpopular1"
        app:layout_constraintTop_toTopOf="@+id/mostpopular1"
        app:layout_constraintVertical_bias="0.0" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_item_photomm"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:src="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="@+id/mostpopular2"
        app:layout_constraintStart_toEndOf="@+id/mostpopular2"
        app:layout_constraintTop_toTopOf="@+id/mostpopular2"
        app:layout_constraintVertical_bias="0.0" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_item_photomm2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:src="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="@+id/img_item_photomm"
        app:layout_constraintStart_toEndOf="@+id/img_item_photomm"
        app:layout_constraintTop_toTopOf="@+id/img_item_photomm"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="387dp"
        android:layout_height="29dp"
        android:layout_marginTop="112dp"
        android:text="Category"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />





        <ImageView
            android:id="@+id/image1"
            android:layout_width="138dp"
            android:layout_height="186dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/button_edit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/buttonhome1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="139dp"
            android:layout_height="185dp"
            app:layout_constraintBottom_toBottomOf="@+id/image1"
            app:layout_constraintEnd_toEndOf="@+id/image1"
            app:layout_constraintStart_toStartOf="@+id/image1"
            app:layout_constraintTop_toTopOf="@+id/image1"
            />


        <ImageView
            android:id="@+id/image2"
            android:layout_width="138dp"
            android:layout_height="186dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/button_edit"
            app:layout_constraintStart_toEndOf="@+id/image1"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/buttonhome2"
            android:layout_width="139dp"
            android:layout_height="185dp"
            app:layout_constraintBottom_toBottomOf="@+id/image2"
            app:layout_constraintEnd_toEndOf="@+id/image2"
            app:layout_constraintStart_toStartOf="@+id/image2"
            app:layout_constraintTop_toTopOf="@+id/image2"
            style="@style/Widget.AppCompat.Button.Borderless"
            />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="138dp"
            android:layout_height="186dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/button_edit"
            app:layout_constraintStart_toStartOf="@+id/image1"
            app:layout_constraintTop_toBottomOf="@+id/image1" />
        <Button
            android:id="@+id/buttonhome3"
            android:layout_width="139dp"
            android:layout_height="185dp"
            app:layout_constraintBottom_toBottomOf="@+id/image3"
            app:layout_constraintEnd_toEndOf="@+id/image3"
            app:layout_constraintStart_toStartOf="@+id/image3"
            app:layout_constraintTop_toTopOf="@+id/image3"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <ImageView
            android:id="@+id/image4"
            android:layout_width="138dp"
            android:layout_height="186dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/button_edit"
            app:layout_constraintEnd_toEndOf="@+id/image2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/image3"
            app:layout_constraintTop_toBottomOf="@+id/image2" />
        <Button
            android:id="@+id/buttonhome4"
            android:layout_width="139dp"
            android:layout_height="185dp"
            app:layout_constraintBottom_toBottomOf="@+id/image4"
            app:layout_constraintEnd_toEndOf="@+id/image4"
            app:layout_constraintStart_toStartOf="@+id/image4"
            app:layout_constraintTop_toTopOf="@+id/image4"
            style="@style/Widget.AppCompat.Button.Borderless"/>

</androidx.constraintlayout.widget.ConstraintLayout>