<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="209dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/most_popular"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/buttona"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/button_bulet"
        app:layout_constraintEnd_toEndOf="@+id/mostpopular1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/mostpopular1"
        app:layout_constraintTop_toTopOf="@+id/mostpopular1" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mostpopular1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/badminton"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonb"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/button_bulet"
        app:layout_constraintEnd_toEndOf="@+id/mostpopular2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/mostpopular2"
        app:layout_constraintTop_toTopOf="@+id/mostpopular2" />



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mostpopular2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/e"
        app:layout_constraintBottom_toBottomOf="@+id/mostpopular1"
        app:layout_constraintStart_toEndOf="@+id/mostpopular1"
        app:layout_constraintTop_toTopOf="@+id/mostpopular1"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/buttonc"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/button_bulet"
        app:layout_constraintEnd_toEndOf="@+id/mostpopular3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/mostpopular3"
        app:layout_constraintTop_toTopOf="@+id/mostpopular3" />



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mostpopular3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/n1"
        app:layout_constraintBottom_toBottomOf="@+id/mostpopular2"
        app:layout_constraintStart_toEndOf="@+id/mostpopular2"
        app:layout_constraintTop_toTopOf="@+id/mostpopular2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttond"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/button_bulet"
        app:layout_constraintEnd_toEndOf="@+id/mostpopular4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/mostpopular4"
        app:layout_constraintTop_toTopOf="@+id/mostpopular4" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mostpopular4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/n3"
        app:layout_constraintBottom_toBottomOf="@+id/mostpopular3"
        app:layout_constraintStart_toEndOf="@+id/mostpopular3"
        app:layout_constraintTop_toTopOf="@+id/mostpopular3"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="387dp"
        android:layout_height="29dp"
        android:layout_marginTop="112dp"
        android:text="@string/category"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <ImageView
        android:id="@+id/image1"
        android:layout_width="351dp"
        android:layout_height="175dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/button_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/homeCommunity"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="352dp"
        android:layout_height="177dp"
        android:text="Community"
        android:textSize="31dp"
        app:layout_constraintBottom_toBottomOf="@+id/image1"
        app:layout_constraintEnd_toEndOf="@+id/image1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/image1"
        app:layout_constraintTop_toTopOf="@+id/image1"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="351dp"
        android:layout_height="175dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_edit"
        app:layout_constraintStart_toStartOf="@+id/image1"
        app:layout_constraintTop_toBottomOf="@+id/image1" />

    <Button
        android:id="@+id/homeNews"
        android:layout_width="351dp"
        android:layout_height="175dp"
        android:text="News"
        android:textSize="31dp"
        app:layout_constraintBottom_toBottomOf="@+id/image2"
        app:layout_constraintEnd_toEndOf="@+id/image2"
        app:layout_constraintStart_toStartOf="@+id/image2"
        app:layout_constraintTop_toTopOf="@+id/image2"
        style="@style/Widget.AppCompat.Button.Borderless"
            />



</androidx.constraintlayout.widget.ConstraintLayout>